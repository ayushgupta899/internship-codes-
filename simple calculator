#include<iostream>
#include<math.h>
using namespace std;

int main(){
    int a,b,oper,ans;
    cout<<"enter first number"<<endl;
    cin>> a ;
    cout<<"enter second number"<<endl;
    cin>> b ;
    cout<<"1.addition 2.subtraction 3.multiplication 4.division"<< endl;
    cin >>oper;

    switch(oper){
        case 1: ans=a+b;
        cout<< "the sum is " << ans <<endl;
        break;

        case 2: ans=a-b;
        cout<< "the difference is " <<ans<<endl;
        break;

        case 3: ans=a*b;
        cout<< "the product is " <<ans<<endl;
        break;

        case 4: ans=a/b;
        cout<< "the divisor is " <<ans<<endl;
        break;

        default: cout<<"invalid input"<<endl;
    }
}
